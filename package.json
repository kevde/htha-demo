{
  "name": "htha-demo",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\""
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^utils\\/(.*)$": "<rootDir>/src/utils/$1",
      "^utils$": "<rootDir>/src/utils",
      "^types$": "<rootDir>/src/types"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node",
      "ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js",
      "**/?(*.)+(spec|test).ts"
    ],
    "verbose": true
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jest": "^30.2.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "uuid": "^13.0.0",
    "yup": "^1.7.1"
  },
  "optionalDependencies": {
    "supertest": "^7.1.4"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.7",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.25",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.10.1",
    "@types/supertest": "^2.0.12",
    "@types/yup": "^0.32.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "_moduleAliases": {
    "/opt/nodejs/utils": "src/utils"
  }
}
